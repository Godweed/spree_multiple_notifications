      <%= form.label :additional_shipment_notification_emails %>
      <%= form.text_field :additional_shipment_notification_emails,
                          value: spree_current_user.try(:email),
                          class: 'form-control',
                          placeholder: "ap@mail.com, rep@mail.com" %>
    </div>
  </div>
</div>
